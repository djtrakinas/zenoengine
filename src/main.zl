// 404 Handler
http.get: /* {
  do: {
    // If accessing root, redirect to max gallery or dashboard
    if ($path == "/") {
        then: {
             http.redirect: "/max/"
             return
        }
    }

    http.not_found: {
      body: "Halaman tidak ditemukan."
    }
  }
}